    <nav class="container mx-auto block sm:block lg:flex xl:flex   items-center justify-between py-4">
        <div class="flex relative left-36 sm:left-auto lg:left-auto xl:left-auto sm:justify-start lg:justify-start xl:justify-start">
            <img class="h-16" src="/img/logoplant.png" alt="logo">
            <p class="relative top-6 text-2xl font-semibold py-3"> Green Desire</p>
        </div>
        <div class="">
            <div class="flex px-6 sm:hidden lg:hidden xl:hidden justify-between">
                <a href="javascript:void(0)" class="text-2xl butn" onclick=""><i class="fa fa-bars"></i></a>
                <div class=" border ring-1 ring-black ring-offset-0 rounded-lg ">
                    <input class="text-sm pl-3 " type="text" placeholder="Search Entire store here..">
                    <button><i class="fa fa-search text-xl pr-2"></i></button>
                </div>
            </div>
            <ul class="hidden sm:flex lg:flex xl:flex items-center ul">
                <li class="ml-4 text-xl"><a href="/" >Home</a></li>

                <% if(user) { %>
                    <li class="">
                        <li class="ml-4 text-xl"><a href="/customer/orders">Orders</a></li>
                        <form id="logout" action="/logout" method="POST">
                            <a class="ml-4 text-xl" onclick="document.getElementById('logout').submit()" href="#">Logout</a>
                        </form>
                        <li class="ml-4 text-xl"><%= user.name %> </li>
                    </li>
                <% } else { %>
                    <li class="ml-4 text-xl"><a href="/register"  >Register</a></li>
                    <li class="ml-4 text-xl"><a href="/login"  >Login</a></li>
                <% } %>
                <li class="ml-4 text-xl hidden sm:inline lg:inline xl:inline border ring-1 ring-black ring-offset-0 rounded-lg ">
                    <form action="/search" method="POST">
                        <input class="text-lg pl-3 p-1" type="text" name="search" placeholder="Search Entire store here..">
                        <button type="submit"><i class="fa fa-search text-xl pr-2"></i></button>
                    </form>
                </li>
                <li class="flex sm:hidden lg:hidden xl:hidden ml-4 text-xl"><a href="/cart">Cart</a></li>
                <li class="ml-6 cart hidden sm:inline lg:inline xl:inline ">
                    <a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center">
                        <span id="cartCounter"
                            class="text-white font-bold pr-2"><%= session.cart ? session.cart.totalQty : '' %>
                        </span>
                        <img src="/img/cart.png" alt="">
                    </a>
                </li>
            </ul>
        </div>  
